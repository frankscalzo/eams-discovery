# EAMS Production Environment Configuration
# This file is copied to .env during production deployments

# Environment
ENVIRONMENT=prod
STAGE=prod
PROJECT_NAME=eams
SERVICE_NAME=discovery

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=904233104383

# Domain Configuration
DOMAIN_NAME=optimumcloudservices.com
CUSTOM_DOMAIN=discovery.optimumcloudservices.com
CLOUDFRONT_ALIASES=discovery.optimumcloudservices.com

# SSL Certificate (must be in us-east-1 for CloudFront)
CERTIFICATE_ARN=arn:aws:acm:us-east-1:904233104383:certificate/your-prod-certificate-id

# Cognito Configuration
COGNITO_DOMAIN_PREFIX=prod-eams
USER_POOL_NAME=prod-eams-users

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=prod-eams

# S3 Configuration
S3_BUCKET_PREFIX=prod-eams

# API Gateway Configuration
API_GATEWAY_NAME=prod-eams-api

# Parameter Store Paths
PARAMETER_STORE_PREFIX=/eams/prod
SECRETS_MANAGER_PREFIX=/eams/prod

# Feature Flags
ENABLE_AI_PROCESSING=true
ENABLE_COST_MONITORING=true
ENABLE_BULK_UPLOAD=true
ENABLE_EXCEL_IMPORT=true
ENABLE_DEPENDENCY_MAPPING=true
ENABLE_IMPACT_ANALYSIS=true
ENABLE_REPORTING=true
ENABLE_MULTI_PROJECT=true
ENABLE_CUSTOM_DOMAIN=true
ENABLE_CLOUDFRONT=true
ENABLE_S3_HOSTING=true
ENABLE_DYNAMODB=true
ENABLE_COGNITO=true
ENABLE_API_GATEWAY=true
ENABLE_LAMBDA=true

# External Service Configuration
OPENAI_API_KEY=your-prod-openai-key
ANTHROPIC_API_KEY=your-prod-anthropic-key
AZURE_OPENAI_KEY=your-prod-azure-key
AZURE_OPENAI_ENDPOINT=https://your-prod-resource.openai.azure.com/

# Monitoring and Logging
LOG_LEVEL=warn
ENABLE_CLOUDWATCH_LOGS=true
ENABLE_XRAY_TRACING=true

# Tags
TAG_PROJECT=EAMS
TAG_ENVIRONMENT=prod
TAG_OWNER=OptimumCloudServices
TAG_COST_CENTER=IT-Architecture
TAG_APPLICATION=EnterpriseArchitectureManagement
